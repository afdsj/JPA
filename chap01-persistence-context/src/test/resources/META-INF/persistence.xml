<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    
    <persistence-unit name="jpatest">
        <class>com.ohgiraffers.section02.Menu</class>
        <class>com.ohgiraffers.section03.Menu</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="myjpa"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/menudb"/>
            <property name="hibernate.show_sql" value="true"/> <!-- 쿼리를 보여줌-->
            <property name="hibernate.format_sql" value="true"/> <!-- sql을 보기 좋게 정렬해줌-->

        </properties>
    </persistence-unit>
    
</persistence>
